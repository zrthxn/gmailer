{
  "compilerOptions": {
    "sourceMap": true,
    "outDir": "build",
    "target": "ES5",
    "module": "CommonJS",
    "lib": [
      "es2015"
    ],
    "esModuleInterop": true,
    "moduleResolution": "node",
    "allowSyntheticDefaultImports": true,
    "resolveJsonModule": true,
    "declaration": true
  },
  "include": [
    "src"
  ],
  "exclude": [
    "node_modules",
    "**/*.test.ts",
    "**/*.spec.ts"
  ]
}