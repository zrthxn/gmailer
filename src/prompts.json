{
  "prompts": [
    {
      "name": "task",
      "type": "list",
      "message": "Choose a function",
      "choices": [
        "init", "account", "help"
      ]
    }
  ],

  "subcommands": {
    "init": {
      "description": "Start a new project",
      "prompts": [
        {
          "name": "path",
          "type": "file",
          "message": "Path to config file"
        }
      ]
    },

    "account": {
      "description": "Manage accounts",
      "prompts": [
        {
          "name": "task",
          "type": "list",
          "message": "Choose a function",
          "choices": [
            "add", "delete"
          ]
        }
      ],
      "subcommands": {
        "add": {
          "description": "Add account",
          "prompts": [
            {
              "name": "userid",
              "type": "string",
              "message": "Enter username to add"
            }
          ]
        },

        "delete": {
          "description": "Delete account",
          "prompts": [
            {
              "name": "userid",
              "type": "string",
              "message": "Which account to remove?"
            }
          ]
        }
      }
    },

    "help": {
      "description": "Show the help menu"
    }
  }
}